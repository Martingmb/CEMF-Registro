              select
                option(value='', disabled='', selected='') Selecciona la Clase
                option(value='famdefe') Familia de la Fe
                option(value='adultos') Adultos
              label Clase
          .row
            .input-field.col.s5.m2
              input#asistencia.validate(placeholder='Asistencia', type='number')
            .input-field.col.s4.m2
              input#biblia.validate(placeholder='Biblias', type='number')
            .input-field.col.s5.m2
              input#date.datepicker(placeholder='Fecha', type='text')
          .row
            .input-field.col.s5.m2
              input#capitulo.validate(placeholder='Capitulos Leidos', type='number')
            .input-field.col.s4.m2
              input#ofrenda.validate(placeholder='Ofrenda', type='number')
            .input-field.col.s4.m2
              input#visitantesCant.validate(placeholder='Visitantes', type='number')
          .row
            .input-field.col.s4.m2
              input#aseo.validate(placeholder='Aseo', type='number')
          #visitantes.row
      button.btn.waves-effect.waves-light(type='submit', name='action')
        | Enviar
